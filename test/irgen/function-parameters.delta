func foo(a: int, b: bool) -> uint {
    // CHECK-NEXT: %aa = alloca i32
    // CHECK-NEXT: %bb = alloca i1
    // CHECK-NEXT: store i32 %a, i32* %aa
    // CHECK-NEXT: store i1 %b, i1* %bb
